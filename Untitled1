describe("Calculator", function() {
    describe("Addition function", function() {
        it("should take two arguments and return the sum of those arguments", function() {
            expect(addition(2,2)).toBe(4);
        });
        it("should not produce 4 if the arguments given do not total 4", function() {
            expect(addition(27,3)).toBe(30)
        })
        it("should display an alert if not a number", function() {
           spyOn(window, "alert");
           addition("hello");
           expect(window.alert).toHaveBeenCalledWith("number dumbass")
           
        })
    });
});


var jobs=[]; //array holiding photos

var c=7;

//get json data
var requestURL="https://api.nasa.gov/mars-photos/api/v1/rovers/curiosity/photos?camera=mast&sol=1000&api_key=TSkGELpa7xcQPZrZL8umXnXvAAqweK0Ec60hcWmj"
var request = new XMLHttpRequest();
request.open('GET', requestURL);
request.responseType = 'json';
request.send();

 request.onload = function(){
    var  data=request.response;
    for(var i=0;i < data.photos.length;i++){
    jobs.push(data.photos[i].img_src);
 }
  console.log(jobs.length) 
  
